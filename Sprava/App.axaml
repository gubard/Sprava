<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ss="clr-namespace:Sprava.Services"
             xmlns:m="clr-namespace:Inanna.Models;assembly=Inanna"
             xmlns:ip="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:h="clr-namespace:Sprava.Helpers"
             xmlns:s="clr-namespace:Inanna.Services;assembly=Inanna"
             x:Class="Sprava.App"
             RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <ss:ViewLocator />
        <ss:ValidationErrorDataTemplate />

        <DataTemplate x:DataType="m:InannaCommand">
            <Button Command="{Binding Command}"
                    Classes.danger="{Binding Type, Converter={x:Static s:IsValueConverter.Instance}, ConverterParameter={x:Static m:ButtonType.Danger}}"
                    Classes.primary="{Binding Type, Converter={x:Static s:IsValueConverter.Instance}, ConverterParameter={x:Static m:ButtonType.Primary}}"
                    IsEnabled="{Binding IsEnable}"
                    Content="{Binding Icon}"
                    CommandParameter="{Binding Parameter}"
                    ToolTip.Tip="{Binding Content}" />
        </DataTemplate>

        <DataTemplate x:DataType="ip:PackIconMaterialDesignKind">
            <ip:PackIconMaterialDesign Kind="{Binding}" />
        </DataTemplate>

        <DataTemplate x:DataType="m:ServiceOfflineStatus">
            <StackPanel Classes="horizontal">
                <TextBlock Classes="small align-center"
                           Text="{Binding State.ServiceName, Converter={x:Static s:StringLocalizationConverter.Instance}}" />
                <Button Classes="small" Content="{StaticResource Lang.Offline}"
                        Command="{x:Static h:SpravaCommands.SwitchServiceModeCommand}"
                        CommandParameter="{Binding State}" />
            </StackPanel>
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Assets/Langs/en-US.axaml" />
                <ResourceInclude Source="Styles/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://IconPacks.Avalonia.MaterialDesign/MaterialDesign.axaml" />
        <StyleInclude Source="avares://Inanna/Styles/Theme.axaml" />
        <StyleInclude Source="avares://Cromwell/Styles/Theme.axaml" />
        <StyleInclude Source="avares://Diocles/Styles/Theme.axaml" />
        <StyleInclude Source="Styles/Theme.axaml" />
    </Application.Styles>
</Application>