<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Sprava.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sprava.Ui.DeveloperView"
             x:DataType="ui:DeveloperViewModel">
    <StackPanel>
        <StackPanel Classes="horizontal">
            <TextBlock Text="{DynamicResource Lang.MaterialDesignSizeType}" />
            <TextBlock Text=": " />
            <TextBlock Text="{Binding DesignSizeType}" />
        </StackPanel>

        <Button Content="{DynamicResource Lang.Refresh}" 
                Command="{Binding RefreshCommand}"
                CommandParameter="{Binding $self}" />
    </StackPanel>
</UserControl>