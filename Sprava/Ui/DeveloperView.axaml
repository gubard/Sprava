<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Sprava.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sprava.Ui.DeveloperView"
             x:DataType="ui:DeveloperViewModel">
    <Grid RowDefinitions="*,Auto">
        <ScrollViewer Classes="vertical-scroll">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                <TextBlock Text="{DynamicResource Lang.MaterialDesignSizeType}" />
                <TextBlock Grid.Column="1" Text="{Binding DesignSizeType}" />
                <TextBlock Grid.Row="1" Text="{DynamicResource Lang.TopLevelType}" />
                <TextBlock Grid.Row="1" Grid.Column="1" Classes="text-wrap" Text="{Binding TopLevelType}" />
                <TextBlock Grid.Row="2" Text="{DynamicResource Lang.TopLevelClasses}" />

                <ItemsControl Grid.Row="2" Grid.Column="1" Classes="horizontal-wrap" ItemsSource="{Binding Classes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Classes="m-h-3" Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="1"
                Classes="align-stretch content-align-center h1"
                Content="{DynamicResource Lang.Refresh}"
                Command="{Binding RefreshCommand}"
                CommandParameter="{Binding $self}" />
    </Grid>
</UserControl>